    IDS_TILES_INFO "%dx%d tuiles (%dx%d pixels)"
    IDS_STRIPS_INFO "%d bande%s de %d pixel%s"
    IDS_IMAGE_NOT_TILED "L'image n'est pas tuilée"
    IDS_SINGLE_IMAGE "Image simple"
