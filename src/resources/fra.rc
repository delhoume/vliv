VLIVMENU MENU
BEGIN
	POPUP "&Fichier"	
	BEGIN
		MENUITEM "Ouvrir...\tCtrl+O",             ID_FILE_OPEN
		MENUITEM SEPARATOR
		MENUITEM "Imprimer...",                    ID_FILE_PRINT, GRAYED	
		MENUITEM SEPARATOR
		POPUP "Fichiers récents"                    GRAYED
		BEGIN
			MENUITEM "Vide",               ID_FILE_RECENT
		END
		MENUITEM SEPARATOR
		MENUITEM "&Quitter",                       ID_FILE_EXIT
	END
    POPUP "&Image"
    BEGIN
 		MENUITEM "Première Page\tCtrl+F",          ID_IMAGE_FIRST, GRAYED
        MENUITEM "Page Précédente\tCtrl+P",       ID_IMAGE_PREV, GRAYED
        MENUITEM "Page Suivante\tCtrl+N",           ID_IMAGE_NEXT, GRAYED
        MENUITEM "Dernière Page\tCtrl+L",           ID_IMAGE_LAST, GRAYED
    END
    POPUP "&Outils"
    BEGIN
	MENUITEM "Vider la liste des fichiers récents"       ID_TOOLS_CLEAR
	MENUITEM "Plein écran\tEnter"            ID_TOOLS_FULLSCREEN
        MENUITEM SEPARATOR
	MENUITEM "Enregistrer..."                  ID_TOOLS_REGISTER
        MENUITEM SEPARATOR
	MENUITEM "Exporter la vue vers un fichier BMP..." ID_TOOLS_EXPORTBMP, GRAYED
	MENUITEM "Copier la vue dans le Clipboard\tCtrl+C" ID_TOOLS_CLIPBOARD, GRAYED
    END
     POPUP "&Aide"
    BEGIN
        MENUITEM "Crédits...",                  ID_HELP_CREDITS
        MENUITEM SEPARATOR
        MENUITEM "A propos...",                    ID_HELP_ABOUT
    END
END

