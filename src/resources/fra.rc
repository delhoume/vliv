    ID_HELP_ABOUT, "A propos..."
    IDS_UNTITLED, "Very Large Image Viewer"
    IDS_TITLED, "Very Large Image Viewer : %s"
    IDS_REGISTERED_TO, "Enregistré pour : %s"
